<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:height="@dimen/sesl_progress_bar_height"
        android:gravity="fill_horizontal|center">

        <nine-patch
            android:src="@drawable/sesl_progress_bar"
            android:tint="?attr/progressNormalColor" />

    </item>

    <item
        android:id="@android:id/secondaryProgress"
        android:height="@dimen/sesl_progress_bar_height"
        android:gravity="fill_horizontal|center">

        <scale android:scaleWidth="100%">

            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="?attr/progressActivatedColor" />

        </scale>

    </item>

    <item
        android:id="@android:id/progress"
        android:height="@dimen/sesl_progress_bar_height"
        android:gravity="fill_horizontal|center">

        <scale android:scaleWidth="100%">

            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="?attr/progressActivatedColor" />

        </scale>

    </item>

</layer-list>