<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/sesl_progress_dialog_circle_size"
    android:layout_gravity="center">

    <android.support.v7.widget.SeslProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.Light.ProgressBar.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="100" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="@dimen/sesl_progress_dialog_circle_message_width"
        android:textSize="@dimen/sesl_progress_dialog_circle_message_text_size"
        android:textColor="@color/sesl_progress_dialog_circle_text_color_light"
        android:fontFamily="@string/sesl_font_family_regular"
        android:maxLines="1" />

</FrameLayout>