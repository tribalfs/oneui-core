<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/sesl_tooltip_background"
              android:elevation="@dimen/sesl_hover_popup_elevation">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Tooltip"
        android:textSize="@dimen/sesl_hover_popup_text_size"
        android:textColor="?attr/tooltipForegroundColor"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="sec-roboto-light"
    />

</LinearLayout>
